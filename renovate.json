{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },
  "packageRules": [
    {
      "description": "Angular packages together",
      "matchPackagePatterns": ["^@angular", "^@angular-devkit", "^angular-eslint", "^zone.js"],
      "groupName": "angular"
    },
    {
      "description": "TypeScript and ESLint together",
      "matchPackagePatterns": ["^typescript", "^eslint", "^typescript-eslint"],
      "groupName": "typescript-eslint"
    },
    {
      "description": "Spring Boot packages together",
      "matchPackagePatterns": ["^org.springframework"],
      "groupName": "spring"
    },
    {
      "description": "Automerge minor/patch if tests pass",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Don't automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
